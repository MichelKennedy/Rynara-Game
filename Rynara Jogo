<body>
    <h1>Quem é mais bonita</h1>
    <div class="images">
        <div class="image-container" id="optionA" onclick="chooseImage('A')">
            <img src="https://i.ibb.co/cr3bVSW/IMG-20240908-223225-428.webp" alt="Rynara">
            <p>Rynara</p>
        </div>
        <div class="image-container" id="optionB" onclick="chooseImage('B')">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSMZFL5R8K8vSkQM5S_BQgSjHLe4eI_vynilA&usqp=CAU" alt="Bruna Marquezine">
            <p>Bruna Marquezine</p>
        </div>
    </div>
    <p id="result"></p>
    <img id="correctImage" src="https://i.ibb.co/cr3bVSW/IMG-20240908-223225-428.webp" alt="Rynara"> <!-- Imagem correta -->
    <script>
        function chooseImage(option) {
            const result = document.getElementById('result');
            const correctImage = document.getElementById('correctImage');
            
            result.innerText = "Você acertou!";
            result.style.opacity = '0'; // Reseta a opacidade antes de animar
            result.style.top = '0'; // Inicia fora da tela
            result.style.transition = 'none'; // Remove transição temporariamente
            
            if (option === 'B') {
                swapImages(); // Troca as imagens ao escolher Bruna Marquezine
            }

            // Delay para exibir a mensagem
            setTimeout(() => {
                result.style.transition = 'all 0.5s ease'; // Define a transição novamente
                result.style.top = '50%'; // Move a mensagem para o meio
                result.style.opacity = '1'; // Torna a mensagem visível
                correctImage.style.display = 'block'; // Exibe a imagem correta
            }, 500); // Delay de 500ms antes de animar
        }
        
        function swapImages() {
            const imgA = document.getElementById('optionA').querySelector('img');
            const imgB = document.getElementById('optionB').querySelector('img');
            const tempSrc = imgA.src;
            imgA.src = imgB.src;
            imgB.src = tempSrc;
            const tempAlt = imgA.alt;
            imgA.alt = imgB.alt;
            imgB.alt = tempAlt;
        }
    </script>
</body>
</html>
